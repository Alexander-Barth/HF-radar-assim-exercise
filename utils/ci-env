
if [[ "$OSTYPE" == "darwin"* ]]; then
    if [ "$TRAVIS_OS_NAME" = "osx" ]; then
        export PATH="/Users/travis/Library/Python/3.7/bin:$PATH";
    fi

    export PATH="/Users/runner/Library/Python/3.8/bin:$PATH"
    brew install gnu-sed coreutils
    export PATH="$(brew --prefix gnu-sed)/libexec/gnubin:$PATH"
    export PATH="$(brew --prefix coreutils)/libexec/gnubin:$PATH"
fi

# necessary for Windows
if ! command -v python3 &> /dev/null; then
    echo "python3 could not be found"

    function python3() {
       python "$@"
    }
fi

export PATH="$HOME/.local/bin:$PATH"

# for windows:
# update version if necessary
export PATH="$HOME/AppData/Roaming/Python/Python39/Scripts:$PATH"

echo "Env. variable HOME is: $HOME"
echo "Env. variable PATH is: $PATH"

sed --version
cut --version
python3 --version
